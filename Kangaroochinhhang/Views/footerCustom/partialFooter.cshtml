<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        @using (Html.BeginForm("CommandCall", "Footer", FormMethod.Post))
            {
        <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Yêu cầu gọi điện</h4>
                </div>
                <div class="modal-body">
                    <div class="input-content">

                        <img src="~/Content/Display/ICon/calendar.png" alt="Lịch hẹn" />
                        <div class="text-hello">@Model.Name Xin chào quý khách,</div>

                        <p class="conten-sub">Vui lòng nhập thông tin để chúng tôi gọi điện trực tiếp tư vấn cho bạn sau 1-2 phút</p>
                        <input class="request_phone form-control" type="text" required name="request_phone" id="request_phone" value="" placeholder="Số điện thoại liên hệ lại">
                        <div class="phone_error alert-danger"></div>
                        <textarea class="request_content form-control" required name="request_content" id="request_content" placeholder="Nội dung thắc mắc?"></textarea>

                        <!-- dieupt09112016 BEGIN -->
                        <div>
                            <p class="conten-sub">Bạn Ở Khu Vực Nào?</p>

                            <input type="radio" id="loc_req_1" name="request_location" value="hn" class="css-checkbox-x2 request_location" checked="checked">
                            <label for="loc_req_1" class="css-label-x2">HN</label>

                            <input type="radio" id="loc_req_2" name="request_location" value="hcm" class="css-checkbox-x2 request_location">
                            <label for="loc_req_2" class="css-label-x2">HCM</label>
                            <input type="radio" id="loc_req_3" name="request_location" value="tk" class="css-checkbox-x2 request_location">
                            <label for="loc_req_3" class="css-label-x2">Tỉnh khác</label>
                        </div>
                        <!-- dieupt09112016 END -->

                        <div class="content_error alert-danger"><div class="loading"></div></div>
                        <div class="submit-content error_send" style="display:none;text-align: center;">
                        </div>
                        <div class="submit-content js_submit"><span class="send-go btn" onclick="javascript:return Senmail()">Gửi Đi</span><div class="go-hotline"> Gọi hotline <span>@Model.Hotline1</span> (24/7)</div></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <span class="result" style="margin:5px 10px; color:#238f0e; font-weight:bold; display:inline-block; padding:5px;  float:left"></span>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        }
    </div>
</div>
<script>
    function Senmail() {
        var content = $("#request_content").val();
        var phone = $("#request_phone").val();
        var kiemtra = 0;
        if (content.length < 10) {
            kiemtra = 1;
            alert("Bạn vui lòng nhập nội dung yêu cầu !");
            $(".result").html("Bạn vui lòng nhập nội dung yêu cầu");
        }
        if (phone.length < 10) {
            kiemtra = 1;
            alert("Bạn vui lòng nhập số điện thoại !");
            $(".result").html("Bạn vui lòng nhập số điện thoại của bạn !");
        }
        if (kiemtra != 1) {
            $(".loading").html("<img src=\"/Content/Display/ICon/InternetSlowdown_Day.gif\" style=\"width:70px; margin:5px auto; display:block;clear:both\" /> ");

            $.post("/footer/CommandCall", { "phone": phone, "content": content },
                    function (data) {

                        $(".result").html(data.result);
                        $(".loading").html("");
                        $("#request_content").val() = "";
                        $("#request_phone").val() = "";
                    });
        }

        return false;
    }

</script> 
