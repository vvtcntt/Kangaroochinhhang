@{
    Layout = ViewBag.layout;
}

@using PagedList.Mvc;
@model PagedList.IPagedList<Kangaroochinhhang.Models.tblNew>

@if (Session["idManu"] != null && Session["idManu"] != "")
{

    <div id="root">
        <nav>
            @Html.Raw(ViewBag.nUrl)
        </nav>
    </div>
    <div id="news">

        <h1 class="name">Tin tức mới</h1>
        <div id="newsContent">
            <div id="newsList">
                @foreach (var item in Model)
            {
            <div class="tearNews">
                <a href="/3/@item.Tag" title="@item.Name"><img src="@item.Images" alt="@item.Name" /></a>
                <a href="/3/@item.Tag" title="@item.Name" class="name">@item.Name</a>
                <span>Bài viết được gửi lúc : @item.DateCreate</span>
                <p>
                    @item.Description
                </p>
                <a href="/3/@item.Tag" title="@item.Name" class="detail">Xem tiếp</a>
            </div>
            }
                @Html.PagedListPager(Model, page => Url.Action("listNews", new { page = page, sortOrder = ViewBag.CurrentSortOrder, sortName = ViewBag.CurrentSortName, sortLevel = ViewBag.CurrentSortLevel }), (PagedListRenderOptions)ViewBag.ship)
            </div>
        </div>
        <div id="sidebarNews">
            @{Html.RenderAction("partialMenuRightNews", "newsCustom");}
         </div>
    </div>
                }
                else
                {
                    <div id="Contents">
                        <div class="nVar_Product">
                            <nav>@Html.Raw(ViewBag.nUrl)</nav>
                        </div>
                        <div class="Clear"></div>
                        <div id="News">
                            <div id="ContentNews">

                                <div id="LeftNews">
                                    <div id="LeftNews">
                                        <div class="nVar_news">
                                            <h1>@Html.Raw(ViewBag.Name)</h1>
                                        </div>
                                        @foreach (var item in Model)
                                    {
                                    <div class="Tear_News">
                                        <a href="/3/@item.Tag" title="@item.Name"><img src="@item.Images" alt="@item.Name" /></a>
                                        <h2><a href="/3/@item.Tag" title="@item.Name" class="Name">@item.Name</a></h2>
                                        <span class="Cata"><span></span>Thời gian gửi: @item.DateCreate</span>
                                        <span class="Des">@item.Description</span>
                                    </div>
                                    }
                                        <div class="Clear"></div>
                                        @Html.PagedListPager(Model, page => Url.Action("ListNews", new { page = page, sortOrder = ViewBag.CurrentSortOrder, sortName = ViewBag.CurrentSortName, sortLevel = ViewBag.CurrentSortLevel }), (PagedListRenderOptions)ViewBag.ship)
                                    </div>
                                </div>

                                <div id="RightNews">
                                    <div class="nVar_1">
                                        <span>Chuyên mục chính</span>
                                    </div>
                                    <div class="ListMenu">
                                        <a href="/2/Tin-tuc" title="Tin tức">› Tin tức</a>
                                        <a href="/2/Tuyen-dung" title="Tuyển dụng">› Tuyển dụng</a>
                                        <a href="#" title="Khuyến mại" rel="nofollow">› Bản tin khuyến mại</a>
                                        <a href="/Dai-ly-cua-VINCOM" title="Hệ thống phân phối">› Đại lý của VINCOM</a>
                                    </div>

                                    @{Html.RenderAction("Boxfacebook", "News");}
                                </div>
                            </div>
                        </div>
                        <div class="Clear"></div>
                    </div>
}